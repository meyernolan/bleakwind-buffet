<UserControl x:Class="PointOfSale.PaymentOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Payment Options" FontWeight="Bold" TextDecorations="Underline"  FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="cashButton" Click="CashButtonClick" Grid.Row="1" Content="Cash" FontSize="50" />
        <Button Name="creditButton" Click="CreditButtonClick" Grid.Row="2" Content="Credit" FontSize="50" />
        <Button Name="debitButton" Click="DebitButtonClick" Grid.Row="3" Content="Debit" FontSize="50" />
        <Button Name="returnButton" Click="ReturnButtonClick" Grid.Row="4" Content="Return to Order" FontSize="50" />
    </Grid>
</UserControl>