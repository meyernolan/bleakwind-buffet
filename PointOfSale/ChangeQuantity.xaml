<UserControl x:Class="PointOfSale.ChangeQuantity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             Height="60" Width="70">
    <Border BorderBrush="Gold" BorderThickness="2">
        <Grid>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Content="{Binding Path=Change, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ChangeQuantity}}"/>
        </Grid>
    </Border>
</UserControl>
