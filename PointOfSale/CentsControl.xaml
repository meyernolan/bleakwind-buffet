<UserControl x:Class="PointOfSale.CentsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             Height="60" Width="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:CentsLabel Grid.Column="0" x:Name="centsLabel" Value="{Binding Path=Value}"/>
        <local:CustomerQuantity Grid.Column="1" x:Name="customerQuantity"/>
        <local:ChangeQuantity Grid.Column="2" x:Name="changeQuantity" Value="{Binding Path=Value}"/>
    </Grid>
</UserControl>
